{
	"name": "@chr33s/shopflare",
	"version": "3.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "shopify app build",
		"check": "concurrently 'npm:check:*'",
		"check:actions": "if command -v actionlint 2>&1 >/dev/null; then actionlint; fi",
		"check:css": "npm run stylelint -- '**/*.css'",
		"check:lint": "npm run eslint",
		"check:format": "npm run prettier -- --check .",
		"check:spell": "if command -v cspell 2>&1 >/dev/null; then cspell --cache --cache-location=./node_modules/cache/cspell --gitignore --quiet .; fi",
		"check:types": "tsc",
		"clean": "rm -rf .{react-router,shopify,wrangler} build node_modules/.{cache,mf,tmp,vite,vite-temp} && find . -type d -name __screenshots__ -exec rm -rf {} \\;",
		"deploy": "concurrently 'npm:deploy:*'",
		"deploy:cloudflare": "wrangler deploy",
		"deploy:shopify": "shopify app deploy --message=$(git rev-parse --abbrev-ref HEAD):$npm_package_version --version=$(git rev-parse HEAD)",
		"dev": "shopify app dev --localhost-port=8080 --use-localhost",
		"dev:tunnel": "source .env && shopify app dev --tunnel-url=${SHOPIFY_APP_URL}:${PORT:-8080}",
		"eslint": "npm run --silent tsx -- $(npm root)/.bin/eslint --cache --cache-location=./node_modules/.cache/eslint --flag=unstable_native_nodejs_ts_config",
		"fix": "concurrently 'npm:fix:*'",
		"fix:css": "npm run stylelint -- --fix '**/*.css'",
		"fix:format": "npm run prettier -- --write .",
		"fix:lint": "npm run eslint -- --fix",
		"gen": "concurrently 'npm:gen:*'",
		"gen:code": "graphql-codegen --errors-only",
		"gen:types": "wrangler types && npm run prettier -- --write ./worker-configuration.d.ts && react-router typegen",
		"logs": "wrangler tail",
		"prettier": "npm run --silent tsx -- $(npm root)/.bin/prettier --cache .",
		"preview": "vite preview",
		"start": "wrangler dev",
		"stylelint": "stylelint --ignore-path=.prettierignore",
		"test": "vitest --run",
		"test:e2e": "node --env-file=.env --env-file=.env.test $(npm root)/.bin/playwright test",
		"tunnel": "source .env && cloudflared tunnel --no-autoupdate run --token=${CLOUDFLARE_API_TOKEN}",
		"tsx": "run () { node --experimental-strip-types --no-warnings=ExperimentalWarning ${@}; }; run"
	},
	"dependencies": {
		"@shopify/graphql-client": "1.4.0",
		"i18next": "25.2.1",
		"isbot": "5.1.28",
		"jose": "6.0.11",
		"react": "19.1.0",
		"react-dom": "19.1.0",
		"react-i18next": "15.5.3",
		"react-router": "7.6.2",
		"zod": "3.25.67"
	},
	"devDependencies": {
		"@cloudflare/vite-plugin": "1.7.4",
		"@cloudflare/vitest-pool-workers": "0.8.43",
		"@playwright/test": "1.53.1",
		"@react-router/dev": "7.6.2",
		"@shopify/api-codegen-preset": "1.1.8",
		"@shopify/app-bridge-react": "4.1.10",
		"@shopify/app-bridge-types": "0.0.18",
		"@shopify/app-bridge-ui-types": "0.1.1",
		"@shopify/eslint-plugin": "50.0.0",
		"@shopify/prettier-config": "1.1.4",
		"@shopify/stylelint-plugin": "15.0.2",
		"@shopify/typescript-configs": "5.1.2",
		"@types/react": "19.1.8",
		"@types/react-dom": "19.1.6",
		"@vitest/browser": "3.2.4",
		"concurrently": "9.2.0",
		"eslint": "9.29.0",
		"happy-dom": "18.0.1",
		"playwright": "1.53.1",
		"prettier": "3.5.3",
		"stylelint": "16.21.0",
		"typescript": "5.8.3",
		"vite": "6.3.5",
		"vite-plugin-i18next-loader": "3.1.2",
		"vite-tsconfig-paths": "5.1.4",
		"vitest": "3.2.4",
		"vitest-browser-react": "0.3.0",
		"wrangler": "4.20.5"
	},
	"optionalDependencies": {
		"@shopify/cli": "3.81.2",
		"@shopify/plugin-cloudflare": "3.81.2"
	},
	"trustedDependencies": [
		"@shopify/plugin-cloudflare"
	],
	"engines": {
		"node": "^22.14.0",
		"npm": ">=9.6.4"
	},
	"workspaces": [
		"extensions/*"
	],
	"bin": {
		"shopflare": "npm run tsx cli.ts"
	},
	"prettier": "@shopify/prettier-config",
	"stylelint": {
		"extends": [
			"@shopify/stylelint-plugin/prettier"
		]
	}
}
