{
	"name": "@chr33s/shopflare",
	"version": "3.0.0",
	"private": true,
	"bin": {
		"shopflare": "node cli.ts"
	},
	"workspaces": [
		"extensions/*"
	],
	"type": "module",
	"imports": {
		"#app/*": [
			"./app/*"
		]
	},
	"scripts": {
		"build": "shopify app build",
		"check": "concurrently 'npm:check:*'",
		"check:actions": "if command -v actionlint 2>&1 >/dev/null; then actionlint; fi",
		"check:lint": "oxlint --type-aware --type-check .",
		"check:lockfile": "lockfile-lint --format=plain --path=./package-lock.json",
		"check:format": "oxfmt --check .",
		"check:spell": "if command -v cspell 2>&1 >/dev/null; then cspell --cache --cache-location=./node_modules/cache/cspell --gitignore --quiet lint .; fi",
		"check:types": "tsc",
		"clean": "rm -rf .{react-router,shopify,wrangler} build node_modules/.{cache,mf,tmp,vite,vite-temp} && find . -type d -name __screenshots__ -exec rm -rf {} \\;",
		"deploy": "concurrently --group 'npm:deploy:*'",
		"deploy:cloudflare": "wrangler deploy",
		"deploy:shopify": "shopify app deploy --message=$(git rev-parse --abbrev-ref HEAD):$npm_package_version --version=$(git rev-parse HEAD)",
		"dev": "shopify app dev --localhost-port=8080 --use-localhost",
		"dev:tunnel": "source .env && shopify app dev --tunnel-url=${SHOPIFY_APP_URL}:${PORT:-8080}",
		"fix": "concurrently --group 'npm:fix:*'",
		"fix:format": "oxfmt --write .",
		"fix:lint": "oxlint --type-aware --type-check --fix",
		"gen": "concurrently --names='wrangler,graphql:admin,graphql:customer,graphql:storefront,react-router' 'wrangler types' 'npm:graphql-codegen -- --project=admin' 'npm:graphql-codegen -- --project=customer' 'npm:graphql-codegen -- --project=storefront' 'react-router typegen'",
		"graphql-codegen": "node --env-file=.env $(npm root)/.bin/graphql-codegen --errors-only",
		"logs": "wrangler tail",
		"preview": "vite preview",
		"start": "wrangler dev",
		"test": "vitest --run",
		"test:e2e": "node --env-file=.env --env-file=.env.test $(npm root)/.bin/playwright test",
		"tunnel": "source .env && cloudflared tunnel --no-autoupdate run --token=${CLOUDFLARE_API_TOKEN}"
	},
	"dependencies": {
		"@shopify/graphql-client": "1.4.1",
		"i18next": "25.8.10",
		"isbot": "5.1.35",
		"jose": "6.1.3",
		"react": "19.2.4",
		"react-dom": "19.2.4",
		"react-i18next": "16.5.4",
		"react-router": "7.13.0",
		"zod": "4.3.6"
	},
	"devDependencies": {
		"@cloudflare/vite-plugin": "1.25.0",
		"@cloudflare/vitest-pool-workers": "0.12.12",
		"@playwright/test": "1.58.2",
		"@react-router/dev": "7.13.0",
		"@shopify/api-codegen-preset": "1.2.2",
		"@shopify/app-bridge-react": "4.2.10",
		"@shopify/app-bridge-ui-types": "0.3.3",
		"@shopify/typescript-configs": "5.1.2",
		"@types/react": "19.2.14",
		"@types/react-dom": "19.2.3",
		"@vitest/browser": "3.2.4",
		"babel-plugin-react-compiler": "1.0.0",
		"concurrently": "9.2.1",
		"happy-dom": "20.6.1",
		"lockfile-lint": "5.0.0",
		"oxfmt": "0.32.0",
		"oxlint": "1.47.0",
		"oxlint-tsgolint": "0.13.0",
		"playwright": "1.58.2",
		"typescript": "5.9.3",
		"vite": "7.3.1",
		"vite-plugin-babel": "1.5.1",
		"vite-plugin-i18next-loader": "3.1.3",
		"vitest": "3.2.4",
		"vitest-browser-react": "1.0.1",
		"wrangler": "4.65.0"
	},
	"optionalDependencies": {
		"@shopify/cli": "3.90.1",
		"@shopify/plugin-cloudflare": "3.90.1"
	},
	"engines": {
		"node": ">=22.18.0"
	},
	"trustedDependencies": [
		"@shopify/plugin-cloudflare"
	]
}
