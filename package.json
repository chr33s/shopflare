{
	"name": "@chr33s/shopflare",
	"version": "2.2.21",
	"private": true,
	"type": "module",
	"scripts": {
		"actionlint": "if command -v actionlint 2>&1 >/dev/null; then actionlint; fi",
		"build": "react-router build",
		"check": "biome check --write",
		"codegen": "graphql-codegen",
		"deploy": "react-router build && wrangler deploy",
		"deploy:shopify": "shopify app deploy --message=$(git rev-parse --abbrev-ref HEAD):$npm_package_version --version=$(git rev-parse HEAD)",
		"dev": "react-router dev --host",
		"dev:shopify": "shopify app dev",
		"preview": "react-router build && wrangler dev",
		"start": "wrangler dev",
		"test": "vitest --run",
		"tunnel": "source .env && cloudflared tunnel --no-autoupdate --url ${SHOPIFY_APP_URL}:8080 run --token ${CLOUDFLARE_API_TOKEN}",
		"typecheck": "tsc",
		"typegen": "wrangler types && react-router typegen"
	},
	"dependencies": {
		"@shopify/graphql-client": "1.3.0",
		"i18next": "24.2.2",
		"i18next-fetch-backend": "6.0.0",
		"isbot": "5.1.23",
		"jose": "6.0.10",
		"react": "18.3.1",
		"react-dom": "18.3.1",
		"react-i18next": "15.4.1",
		"react-router": "7.3.0",
		"remix-i18next": "7.1.0",
		"valibot": "1.0.0-rc.4"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@cloudflare/vitest-pool-workers": "0.7.8",
		"@cloudflare/workers-types": "4.20250311.0",
		"@react-router/dev": "7.3.0",
		"@react-router/serve": "7.3.0",
		"@shopify/api-codegen-preset": "1.1.5",
		"@shopify/app-bridge-react": "4.1.7",
		"@shopify/app-bridge-types": "0.0.17",
		"@shopify/polaris": "13.9.3",
		"@shopify/polaris-icons": "9.3.0",
		"@types/react": "18.3.18",
		"@types/react-dom": "18.3.5",
		"@vitest/browser": "3.0.8",
		"globals": "16.0.0",
		"happy-dom": "17.4.4",
		"playwright": "1.51.0",
		"react-router-dom": "7.3.0",
		"typescript": "5.8.2",
		"vite": "6.2.1",
		"vite-tsconfig-paths": "5.1.4",
		"vitest": "3.0.8",
		"vitest-browser-react": "0.1.1",
		"wrangler": "3.114.1"
	},
	"optionalDependencies": {
		"@shopify/cli": "3.76.2"
	},
	"engines": {
		"node": "^22.14.0",
		"npm": ">=9.6.4"
	}
}
