{
	"name": "@chr33s/shopflare",
	"version": "2.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"actionlint": "actionlint",
		"build": "react-router build",
		"codegen": "graphql-codegen",
		"deploy": "react-router build && wrangler deploy",
		"deploy:shopify": "shopify app deploy --message=$(git rev-parse --abbrev-ref HEAD):$npm_package_version --version=$(git rev-parse HEAD)",
		"dev": "react-router dev --host",
		"dev:shopify": "shopify app dev",
		"eslint": "eslint --cache --cache-location=./node_modules/.cache/eslint .",
		"prettier": "prettier --cache .",
		"preview": "react-router build && wrangler dev",
		"start": "wrangler dev",
		"test": "vitest --run",
		"tunnel": "source .env && cloudflared tunnel --no-autoupdate --url ${SHOPIFY_APP_URL}:8080 run --token ${CLOUDFLARE_API_TOKEN}",
		"typecheck": "tsc",
		"typegen": "wrangler types && react-router typegen"
	},
	"dependencies": {
		"@react-router/serve": "7.1.5",
		"i18next": "24.2.2",
		"i18next-fetch-backend": "6.0.0",
		"isbot": "5.1.22",
		"react": "18.3.1",
		"react-dom": "18.3.1",
		"react-i18next": "15.4.1",
		"react-router": "7.1.5",
		"remix-i18next": "7.0.2"
	},
	"devDependencies": {
		"@cloudflare/vite-plugin": "0.1.0",
		"@cloudflare/vitest-pool-workers": "0.7.0",
		"@cloudflare/workers-types": "4.20250204.0",
		"@eslint/css": "0.4.0",
		"@eslint/js": "9.20.0",
		"@react-router/dev": "7.1.5",
		"@shopify/admin-api-client": "1.0.5",
		"@shopify/api-codegen-preset": "1.1.4",
		"@shopify/app-bridge-react": "4.1.6",
		"@shopify/app-bridge-types": "0.0.16",
		"@shopify/polaris": "13.9.2",
		"@shopify/polaris-icons": "9.3.0",
		"@shopify/shopify-api": "11.8.1",
		"@shopify/storefront-api-client": "1.0.4",
		"@types/node": "22.13.4",
		"@types/react": "18.3.18",
		"@types/react-dom": "18.3.5",
		"eslint": "9.20.1",
		"eslint-config-prettier": "10.0.1",
		"eslint-import-resolver-typescript": "3.8.2",
		"eslint-plugin-import-x": "4.6.1",
		"eslint-plugin-jsx-a11y": "6.10.2",
		"eslint-plugin-react": "7.37.4",
		"eslint-plugin-react-hooks": "5.1.0",
		"eslint-plugin-regexp": "2.7.0",
		"globals": "15.15.0",
		"happy-dom": "17.1.1",
		"prettier": "3.5.1",
		"prettier-plugin-packagejson": "2.5.8",
		"react-router-dom": "7.1.5",
		"typescript": "5.7.3",
		"typescript-eslint": "8.24.1",
		"vite": "6.1.0",
		"vite-tsconfig-paths": "5.1.4",
		"vitest": "3.0.6",
		"wrangler": "3.109.0"
	},
	"optionalDependencies": {
		"@shopify/cli": "3.75.0"
	},
	"engines": {
		"node": "^22.13.1",
		"npm": ">=9.6.4"
	}
}
