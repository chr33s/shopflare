{
	"name": "@chr33s/shopflare",
	"version": "0.5.0",
	"private": true,
	"engines": {
		"npm": ">=9.0.0",
		"node": ">=18.0.0"
	},
	"scripts": {
		"build": "tsc && vite build",
		"checks": "npm-run-all -s format lint typecheck",
		"deploy": "wrangler pages deploy ./dist --project-name ${CLOUDFLARE_PROJECT} --branch ${CLOUDFLARE_BRANCH}",
		"dev": "npm-run-all -p tunnel start",
		"format": "prettier --write '**/*.{css,html,json,md,svg,ts,tsx}'",
		"lint": "npm-run-all -p lint:*",
		"lint:actions": "actionlint",
		"lint:css": "stylelint --allow-empty-input --quiet 'src/**/*.css'",
		"lint:js": "eslint --cache '**/*.{ts,tsx}'",
		"start": "wrangler pages dev --binding=$(cat .env.local | xargs) --compatibility-date=2023-05-18 --kv=SHOPFLARE_KV --port=${PORT} --proxy=1${PORT} -- vite dev --port=1${PORT}",
		"test": "NODE_NO_WARNINGS=1 vitest",
		"tunnel": "cloudflared tunnel --no-autoupdate --url http://localhost:${PORT} run --token ${CLOUDFLARE_TOKEN}",
		"typecheck": "tsc -b",
		"upgrade": "npx npm-check-updates --upgrade"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "4.20230518.0",
		"@graphql-eslint/eslint-plugin": "3.19.1",
		"@shopify/app-bridge": "3.7.7",
		"@shopify/app-bridge-react": "3.7.7",
		"@shopify/app-bridge-utils": "3.5.1",
		"@shopify/polaris": "11.1.1",
		"@shopify/react-i18n": "7.8.0",
		"@shopify/stylelint-plugin": "12.0.1",
		"@types/node": "20.2.5",
		"@types/react": "18.2.8",
		"@types/react-dom": "18.2.4",
		"@types/react-test-renderer": "18.0.0",
		"@typescript-eslint/eslint-plugin": "5.59.9",
		"@typescript-eslint/parser": "5.59.9",
		"@vitejs/plugin-react": "4.0.0",
		"eslint": "8.42.0",
		"eslint-config-prettier": "8.8.0",
		"eslint-plugin-i18next": "6.0.2",
		"eslint-plugin-react": "7.32.2",
		"eslint-plugin-react-hooks": "4.6.0",
		"eslint-plugin-react-refresh": "0.4.1",
		"fast-deep-equal": "3.1.3",
		"happy-dom": "9.20.3",
		"npm-run-all": "4.1.5",
		"prettier": "2.8.8",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"react-query": "3.39.3",
		"react-router-dom": "6.12.0",
		"react-test-renderer": "18.2.0",
		"stylelint": "15.7.0",
		"stylelint-config-standard": "33.0.0",
		"stylelint-order": "6.0.3",
		"typescript": "5.0.4",
		"vite": "4.3.9",
		"vitest": "0.32.0",
		"vitest-environment-miniflare": "2.14.0",
		"wrangler": "3.1.0"
	},
	"dependencies": {
		"@shopify/shopify-api": "7.3.0",
		"apollo-server-errors": "3.3.1",
		"graphql": "16.6.0",
		"graphql-constraint-directive": "5.1.1",
		"graphql-yoga": "4.0.0"
	},
	"optionalDependencies": {
		"@shopify/app": "3.46.2",
		"@shopify/cli": "3.46.2"
	},
	"browserslist": [
		"last 3 chrome versions",
		"last 3 firefox versions",
		"last 3 opera versions",
		"last 3 edge versions",
		"last 3 safari versions",
		"last 3 chromeandroid versions",
		"last 1 firefoxandroid versions",
		"ios >= 13.4"
	],
	"eslintConfig": {
		"extends": [
			"prettier",
			"plugin:@typescript-eslint/recommended",
			"plugin:react/recommended",
			"plugin:react-hooks/recommended",
			"plugin:i18next/recommended"
		],
		"overrides": [
			{
				"files": [
					"*.ts",
					"*.tsx"
				],
				"processor": "@graphql-eslint/graphql"
			},
			{
				"files": [
					"*.graphql"
				],
				"parser": "@graphql-eslint/eslint-plugin",
				"plugins": [
					"@graphql-eslint"
				]
			}
		],
		"parser": "@typescript-eslint/parser",
		"plugins": [
			"@typescript-eslint",
			"react-refresh"
		],
		"root": true,
		"rules": {
			"@typescript-eslint/no-explicit-any": "off",
			"react-refresh/only-export-components": "warn"
		},
		"settings": {
			"react": {
				"version": "detect"
			}
		}
	},
	"prettier": {
		"overrides": [
			{
				"files": "*.svg",
				"options": {
					"parser": "html"
				}
			}
		]
	},
	"stylelint": {
		"extends": [
			"@shopify/stylelint-plugin/prettier",
			"@shopify/stylelint-plugin"
		],
		"plugins": [
			"stylelint-order"
		],
		"rules": {
			"no-descending-specificity": null,
			"no-unknown-animations": null,
			"order/order": [
				"custom-properties",
				"declarations"
			],
			"order/properties-alphabetical-order": true
		}
	}
}
