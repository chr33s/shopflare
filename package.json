{
	"name": "@chr33s/shopflare",
	"version": "3.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "shopify app build",
		"check": "concurrently --group 'npm:check:*'",
		"check:actions": "if command -v actionlint 2>&1 >/dev/null; then actionlint; fi",
		"check:css": "npm run --silent stylelint -- --quiet '**/*.css'",
		"check:lint": "npm run --silent eslint -- --quiet",
		"check:lockfile": "lockfile-lint --format=plain --path=./package-lock.json",
		"check:format": "npm run --silent prettier -- --check .",
		"check:spell": "if command -v cspell 2>&1 >/dev/null; then cspell --cache --cache-location=./node_modules/cache/cspell --gitignore --quiet lint .; fi",
		"check:types": "tsc",
		"clean": "rm -rf .{react-router,shopify,wrangler} build node_modules/.{cache,mf,tmp,vite,vite-temp} && find . -type d -name __screenshots__ -exec rm -rf {} \\;",
		"deploy": "concurrently --group 'npm:deploy:*'",
		"deploy:cloudflare": "wrangler deploy",
		"deploy:shopify": "shopify app deploy --message=$(git rev-parse --abbrev-ref HEAD):$npm_package_version --version=$(git rev-parse HEAD)",
		"dev": "shopify app dev --localhost-port=8080 --use-localhost",
		"dev:tunnel": "source .env && shopify app dev --tunnel-url=${SHOPIFY_APP_URL}:${PORT:-8080}",
		"eslint": "npm run --silent tsx -- $(npm root)/.bin/eslint --cache --cache-location=./node_modules/.cache/eslint --flag=unstable_native_nodejs_ts_config",
		"fix": "concurrently --group 'npm:fix:*'",
		"fix:css": "npm run --silent stylelint -- --fix '**/*.css'",
		"fix:format": "npm run --silent prettier -- --write .",
		"fix:lint": "npm run --silent eslint -- --fix",
		"gen": "concurrently --group --names='wrangler,graphql,react-router,format' 'wrangler types' 'npm:graphql-codegen -- --project=admin' 'react-router typegen' 'npm run --silent prettier -- --write .'",
		"graphql-codegen": "node --env-file=.env $(npm root)/.bin/graphql-codegen --errors-only",
		"logs": "wrangler tail",
		"postinstall": "patch-package",
		"prettier": "npm run --silent tsx -- $(npm root)/.bin/prettier --cache --log-level=error",
		"preview": "vite preview",
		"start": "wrangler dev",
		"stylelint": "stylelint --cache --cache-location=./node_modules/.cache/stylelint --ignore-path=.prettierignore",
		"test": "vitest --run",
		"test:e2e": "node --env-file=.env --env-file=.env.test $(npm root)/.bin/playwright test",
		"tunnel": "source .env && cloudflared tunnel --no-autoupdate run --token=${CLOUDFLARE_API_TOKEN}",
		"tsx": "run () { node --experimental-strip-types --no-warnings=ExperimentalWarning ${@}; }; run"
	},
	"dependencies": {
		"@shopify/graphql-client": "1.4.1",
		"i18next": "25.3.2",
		"isbot": "5.1.28",
		"jose": "6.0.12",
		"react": "19.1.0",
		"react-dom": "19.1.0",
		"react-i18next": "15.6.1",
		"react-router": "7.7.1",
		"zod": "4.0.10"
	},
	"devDependencies": {
		"@cloudflare/vite-plugin": "1.10.1",
		"@cloudflare/vitest-pool-workers": "0.8.57",
		"@playwright/test": "1.54.1",
		"@react-router/dev": "7.7.1",
		"@shopify/api-codegen-preset": "1.1.9",
		"@shopify/app-bridge-react": "4.2.0",
		"@shopify/app-bridge-types": "0.1.0",
		"@shopify/app-bridge-ui-types": "0.2.1",
		"@shopify/eslint-plugin": "50.0.0",
		"@shopify/prettier-config": "1.1.4",
		"@shopify/stylelint-plugin": "15.0.2",
		"@shopify/typescript-configs": "5.1.2",
		"@types/react": "19.1.8",
		"@types/react-dom": "19.1.6",
		"@vitest/browser": "3.2.4",
		"concurrently": "9.2.0",
		"eslint": "9.31.0",
		"happy-dom": "18.0.1",
		"lockfile-lint": "4.14.1",
		"patch-package": "8.0.0",
		"playwright": "1.54.1",
		"prettier": "3.6.2",
		"stylelint": "16.22.0",
		"typescript": "5.8.3",
		"vite": "7.0.6",
		"vite-plugin-i18next-loader": "3.1.2",
		"vitest": "3.2.4",
		"vitest-browser-react": "1.0.1",
		"wrangler": "4.26.0"
	},
	"optionalDependencies": {
		"@shopify/cli": "3.83.0",
		"@shopify/plugin-cloudflare": "3.83.0"
	},
	"trustedDependencies": [
		"@shopify/plugin-cloudflare"
	],
	"engines": {
		"node": "^22.0.0"
	},
	"imports": {
		"#app/*": [
			"./app/*"
		]
	},
	"workspaces": [
		"extensions/*"
	],
	"bin": {
		"shopflare": "npm run tsx cli.ts"
	},
	"prettier": "@shopify/prettier-config",
	"stylelint": {
		"extends": [
			"@shopify/stylelint-plugin/prettier"
		],
		"ignoreFiles": [
			"./build/**",
			"**/dist/**"
		]
	}
}
