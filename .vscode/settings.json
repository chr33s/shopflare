{
	"chat.agent.maxRequests": 100,
	"chat.mcp.discovery.enabled": true,
	"chat.tools.autoApprove": true,
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": "explicit",
		"source.fixAll.stylelint": "explicit"
	},
	"editor.defaultFormatter": "dbaeumer.vscode-eslint",
	"eslint.enable": true,
	"eslint.format.enable": true,
	"eslint.ignoreUntitled": true,
	"eslint.useFlatConfig": true,
	"explorer.fileNesting.patterns": {
		".env": ".env.*, .*.vars",
		"*.ts": "${capture}*.css, ${capture}*.test.ts, ${capture}*.test.tsx",
		"*.tsx": "${capture}*.css, ${capture}*.test.ts, ${capture}*.test.tsx",
		"package.json": ".editorconfig, .gitignore, .npmrc, .prettierignore, *.config.ts, *.d.ts, *.d.cts, cspell.json, package-lock.json, tsconfig*.json",
		"README.md": "CHANGELOG.md, CONTRIBUTING.md, LICENSE.md, SECURITY.md",
		"shopify.app.toml": "shopify.app*.toml, shopify.theme*.toml, shopify.web.toml",
		"wrangler.json": "wrangler*.json, worker-configuration.d.ts"
	},
	"files.associations": {
		".*.vars": "properties",
		".env*": "properties"
	},
	"stylelint.enable": true,
	"typescript.enablePromptUseWorkspaceTsdk": true,
	"typescript.tsdk": "node_modules/typescript/lib"
}
