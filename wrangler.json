{
	"$schema": "./node_modules/wrangler/config-schema.json",
	"name": "shopflare",
	"compatibility_date": "2025-06-17",
	"main": "./app/server.ts",
	"assets": {
		"binding": "ASSETS",
		"directory": "./build/client"
	},
	"dev": {
		"ip": "0.0.0.0",
		"port": 8080
	},
	"durable_objects": {
		"bindings": [
			{
				"class_name": "ShopifyDurableObject",
				"name": "SHOPIFY_DURABLE_OBJECT"
			}
		]
	},
	"kv_namespaces": [
		{
			"binding": "SESSION_KV",
			"id": "?"
		}
	],
	"logpush": true,
	"migrations": [
		{
			"tag": "v1",
			"new_sqlite_classes": ["ShopifyDurableObject"]
		}
	],
	"observability": {
		"enabled": true,
		"head_sampling_rate": 1
	},
	"placement": {
		"mode": "smart"
	},
	"queues": {
		"consumers": [
			{
				"queue": "shopflare"
			}
		],
		"producers": [
			{
				"queue": "shopflare",
				"binding": "WEBHOOK_QUEUE"
			}
		]
	},
	"routes": [
		{
			"custom_domain": true,
			"pattern": "?"
		}
	],
	"send_metrics": false,
	"upload_source_maps": true,
	"vars": {
		"NODE_VERSION": 22,
		"SHOPIFY_API_KEY": "",
		"SHOPIFY_APP_HANDLE": "",
		"SHOPIFY_APP_URL": ""
	},
	"workers_dev": false,
	"workflows": [
		{
			"name": "shopflare-webhook",
			"binding": "WEBHOOK_WORKFLOW",
			"class_name": "WebhookWorkflow"
		}
	]
}
