{
	"$schema": "./node_modules/wrangler/config-schema.json",
	"name": "shopflare",
	"compatibility_date": "2025-04-10",
	"compatibility_flags": ["nodejs_compat"],
	"main": "./worker.ts",
	"analytics_engine_datasets": [
		{
			"binding": "WEB_VITALS",
			"dataset": "shopflare"
		}
	],
	"assets": {
		"binding": "ASSETS",
		"directory": "./build/client"
	},
	"d1_databases": [
		{
			"binding": "DB",
			"database_name": "shopflare",
			"database_id": "?",
			"migrations_dir": "./db/migrations"
		}
	],
	"dev": {
		"ip": "0.0.0.0",
		"port": 8080
	},
	"durable_objects": {
		"bindings": [
			{
				"name": "DURABLE_OBJECT",
				"class_name": "ShopflareDurableObject"
			}
		]
	},
	"kv_namespaces": [
		{
			"binding": "SESSION_STORAGE",
			"id": "?"
		}
	],
	"logpush": true,
	"migrations": [
		{
			"new_sqlite_classes": ["ShopflareDurableObject"],
			"tag": "v1"
		}
	],
	"observability": {
		"enabled": true,
		"logs": {
			"invocation_logs": false
		}
	},
	"placement": {
		"mode": "smart"
	},
	"queues": {
		"consumers": [
			{
				"queue": "shopflare"
			}
		],
		"producers": [
			{
				"queue": "shopflare",
				"binding": "WEBHOOK_QUEUE"
			}
		]
	},
	"rules": [
		{
			"fallthrough": true,
			"globs": ["**/*.sql"],
			"type": "Text"
		}
	],
	"upload_source_maps": true,
	"vars": {
		"NODE_VERSION": 22,
		"SHOPIFY_API_KEY": "",
		"SHOPIFY_APP_URL": ""
	}
}
