{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"css": {
		"linter": {
			"enabled": true
		}
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [
			".react-router/*",
			".shopify/*",
			".wrangler/*",
			"app/types/*",
			"worker-configuration.d.ts"
		]
